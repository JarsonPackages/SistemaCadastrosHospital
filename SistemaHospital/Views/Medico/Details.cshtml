@model ProjetoC._03_MODEL.Medico


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalhes sobre , @Html.DisplayFor(model=> model.Nome)</h2>

<div>
    <table>
        <tr>
            <th rowspan="2" colspan="2">
               
                <img src="~/Content/Img/doctor.png" height="200" />
            </th>
            <th></th>
        </tr>
        <tr>
            <td>
                <dl class="dl-horizontal">
                    <dt>

                        CRM
                    </dt>

                    <dd>
                        @Model.CRM
                    </dd>

                    <dt>
                        Especialização
                    </dt>

                    <dd>
                        @Model.Especializacao
                    </dd>

                    <dt>
                        Nome
                    </dt>

                    <dd>
                        @Model.Nome
                    </dd>

                </dl>

            </td>
        </tr>
    </table>
  

</div>
<p>
    @Html.ActionLink("Voltar para Lista", "Index", new { }, new { @class = "btn btn-default" })
    @Html.ActionLink("Editar", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" })

</p>
