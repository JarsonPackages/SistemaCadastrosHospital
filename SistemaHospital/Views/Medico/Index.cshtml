@model IEnumerable<ProjetoC._03_MODEL.Medico>

@{
    ViewBag.Title = "Index";
}

<h2>Opções do Médico.</h2>

<p>
    @Html.ActionLink("Adicionar Médico", "Create", new { }, new {@class = "btn btn-success"} )
</p>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CRM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especializacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CRM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Especializacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>

            @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.ID }, new { @class = "btn btn-primary" }) |
           @Html.ActionLink("Excluir","Delete", new { id = item.ID } ,  new { @class = "btn btn-danger" })



        </td>
    </tr>
}

</table>
