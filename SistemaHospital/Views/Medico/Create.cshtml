@model ProjetoC._03_MODEL.Medico

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastrar Médico</h2>

<form action="/Medico/Create" method="post">

    @Html.AntiForgeryToken()
    <h4>Medico</h4>
    <hr />

    <div class="form-group">
        <label class="control-label col-md-2">Crm</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" data-val="true" data-val-number="O campo CRM deve ser um número." data-val-required="O campo CRM é obrigatório." id="CRM" name="CRM" type="number" value="" />
            @Html.ValidationMessageFor(model => model.CRM, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <br />
    <br />


    <div class="form-group">
        <label class="control-label col-md-2" for="Especializacao">Especialização</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" id="Especializacao" name="Especializacao" type="text" value="" />
            @Html.ValidationMessageFor(model => model.Especializacao, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    <br />

    <div class="form-group">
        <label class="control-label col-md-2" for="Nome">Nome</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line" id="Nome" name="Nome" type="text" value="" />
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Voltar para Lista", "Index", new { }, new { @class = "btn btn-default" })
            <input type="submit" value="Adicionar" class="btn btn-success" />

        </div>
    </div>

</form>


