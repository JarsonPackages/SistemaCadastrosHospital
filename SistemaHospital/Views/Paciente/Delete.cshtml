@model ProjetoC._03_MODEL.Paciente

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excluir Paciente</h2>
<hr />
<div class="container">
    <br />
    <dl class="dl-horizontal">
        <dt>
            Nome
            <!--Html.DisplayNameFor(model => model.Nome)=   -->

        </dt>

        <dd>
            @Model.Nome

        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Model.Email
        </dd>
        <dt>
            Cpf
        </dt>

        <dd>
            @Model.Cpf
        </dd>

        <dt>
            Cep
        </dt>

        <dd>
            @Model.Cep
        </dd>

        <dt>
            Rua
        </dt>

        <dd>
            @Model.Rua
        </dd>

        <dt>
            Bairro
        </dt>

        <dd>
            @Model.Bairro
        </dd>

        <dt>
            Estado
        </dt>

        <dd>
            @Model.UF
        </dd>

        <dt>
            Cidade
        </dt>

        <dd>
            @Model.Cidade
        </dd>
        <dt>
            Medico
        </dt>

        <dd>
            @foreach (var item in Model.Medicos)
            {
                if (Model.IdMedico == item.ID)
                {
                    @item.Nome
                }

            }
        </dd>

    </dl>

    <form action="@Url.Action("Delete",new { id = Model.Id })" method="post">


        @Html.AntiForgeryToken() <!-- GEra o Token de validacao -->

        <div class="form-actions no-color">
            <a class="btn btn-default" href="/Paciente">Voltar para lista</a> |
            <input type="submit" value="Excluir" class="btn btn-danger" />

        </div>
    </form>
</div>