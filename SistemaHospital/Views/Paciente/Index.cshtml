@model IEnumerable<ProjetoC._03_MODEL.Paciente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal-body no-padding">
    <p>
        @Html.ActionLink("Adicionar Paciente", "Create", "Paciente", new { }, new { @class = "btn btn-success" })
    </p>
    <table class="table table-striped table-bordered table-hover no-margin-bottom no-border-top">
        <thead>
            <tr>
                <th> Nome</th>
                <th> Email</th>
                <th> Cpf</th> 
                <th> Cep </th>
                <th> Rua</th>
                <th> Bairro</th>
                <th> UF</th>
                <th> Cidade</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                       @item.Nome
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Cpf
                    </td>
                  
                    <td>
                        @item.Cep
                    </td>
                    <td>
                        @item.Rua
                    </td>
                    <td>
                        @item.Bairro
                    </td>
                    <td>
                        @item.UF
                    </td>
                    <td>
                        @item.Cidade
                    </td>
                    <td>
                        <a href="@Url.Action("Details",new {id = item.Id })" class=" btn btn-xs btn-info" data-rel="tooltip" title="Sobre">

                            <i class="ace-icon fa fa-search-plus bigger-120"></i>

                        </a>

                        <a href="@Url.Action("Edit",new {id = item.Id })" class=" btn btn-xs btn-success" data-rel="tooltip" title="Editar">

                            <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>

                        </a>

                        <a href="@Url.Action("Delete",new {id = item.Id })" class=" btn btn-xs btn-danger" data-rel="tooltip" title="Excluir">

                            <i class="ace-icon fa fa-trash-o bigger-120"></i>

                        </a>


                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>